<!-- Main Container -->
<div class="container mx-auto px-4 py-8">
  <!-- Header with Title, Search and Add Product -->
  <div
    class="flex flex-col md:flex-row justify-between items-center mb-6 gap-4"
  >
    <h1 class="text-2xl font-bold text-gray-800">Products</h1>

    <div class="flex flex-col sm:flex-row gap-3 w-full md:w-auto">
      <!-- Search Bar -->
      <div class="relative flex-grow">
        <input
          type="text"
          id="searchInput"
          placeholder="Search products"
          class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
        />
        <div
          class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"
        >
          <svg
            class="h-5 w-5 text-gray-400"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
            />
          </svg>
        </div>
      </div>

      <!-- Add Product Button -->
      <button
        class="bg-purple-600 hover:bg-purple-700 text-white font-medium py-2 px-4 rounded-lg flex items-center justify-center transition-colors duration-200"
      >
        <svg
          class="w-5 h-5 mr-2"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 6v6m0 0v6m0-6h6m-6 0H6"
          />
        </svg>
        Add product
      </button>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white rounded-lg shadow-sm p-4 mb-6">
    <div class="flex flex-col md:flex-row gap-4">
      <!-- Main Category Filter -->
      <div class="w-full md:w-1/3">
        <label
          for="mainCategoryFilter"
          class="block text-sm font-medium text-gray-700 mb-1"
          >Main Category</label
        >
        <select
          id="mainCategoryFilter"
          class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
        >
          <option value="">All Categories</option>
          <% if (products.categories && products.categories.length > 0) { %> <%
          products.categories.forEach(category => { %>
          <option value="<%= products.category._id %>">
            <%= products.category.name %>
          </option>
          <% }); %> <% } %>
        </select>
      </div>

      <!-- Club Filter -->
      <div class="w-full md:w-1/3">
        <label
          for="clubFilter"
          class="block text-sm font-medium text-gray-700 mb-1"
          >Club</label
        >
        <select
          id="clubFilter"
          class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
        >
          <option value="">All Clubs</option>
          <% if (products.clubs && products.clubs.length > 0) { %> <%
          products.clubs.forEach(club => { %>
          <option value="<%= products.club._id %>">
            <%= products.club.name %>
          </option>
          <% }); %> <% } %>
        </select>
      </div>

      <!-- Stock Status Filter -->
      <div class="w-full md:w-1/3">
        <label
          for="stockFilter"
          class="block text-sm font-medium text-gray-700 mb-1"
          >Stock Status</label
        >
        <select
          id="stockFilter"
          class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
        >
          <option value="">All Status</option>
          <option value="In Stock">In Stock</option>
          <option value="Out of Stock">Out of Stock</option>
          <option value="Low Stock">Low Stock</option>
        </select>
      </div>
    </div>
  </div>

  <!-- Products Grid -->
  <div
    class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6"
  >
    <% if (products && products.length > 0) { %> <% products.forEach(product =>
    { %>
    <div
      class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-200 hover:shadow-lg transition-all duration-300"
    >
      <!-- Product Image -->
      <div class="relative h-48 bg-gray-100 overflow-hidden group">
        <% if (product.image_url && product.image_url.length > 0) { %>
        <img
          src="<%= product.image_url[0] %>"
          alt="<%= product.title %>"
          class="w-full h-full object-contain p-2"
        />
        <% if (product.image_url.length > 1) { %>
        <button
          class="view-images-btn absolute bottom-2 right-2 bg-white bg-opacity-80 rounded-full p-2 opacity-0 group-hover:opacity-100 transition-opacity"
          data-product-id="<%= product._id %>"
          data-images="<%= JSON.stringify(product.image_url) %>"
          data-title="<%= product.title %>"
        >
          <svg
            class="w-5 h-5 text-gray-700"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
            />
          </svg>
        </button>
        <% } %> <% } else { %>
        <div class="w-full h-full flex items-center justify-center bg-gray-200">
          <svg
            class="w-12 h-12 text-gray-400"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"
            />
          </svg>
        </div>
        <% } %>

        <!-- Stock Status Badge -->
        <div class="absolute top-2 left-2">
          <% if (product.stock_status === 'In Stock') { %>
          <span
            class="px-2 py-1 text-xs font-semibold text-green-700 bg-green-100 rounded-full"
          >
            <%= product.stock_status %>
          </span>
          <% } else if (product.stock_status === 'Out of Stock') { %>
          <span
            class="px-2 py-1 text-xs font-semibold text-red-700 bg-red-100 rounded-full"
          >
            <%= product.stock_status %>
          </span>
          <% } else { %>
          <span
            class="px-2 py-1 text-xs font-semibold text-yellow-700 bg-yellow-100 rounded-full"
          >
            <%= product.stock_status %>
          </span>
          <% } %>
        </div>
      </div>

      <div class="p-4">
        <!-- Product Title -->
        <h3 class="text-lg font-semibold text-gray-800 mb-1 truncate">
          <%= product.title %>
        </h3>

        <!-- Price -->
        <div class="text-purple-600 font-bold mb-2">
          $<%= product.price.toFixed(2) %>
        </div>

        <!-- Category & Club -->
        <div class="flex flex-wrap gap-1 mb-2">
          <% if (product.category) { %>
          <span
            class="inline-block bg-gray-100 rounded-full px-2 py-1 text-xs text-gray-600"
          >
            <%= typeof product.category === 'object' ? product.category.name :
            'Category' %>
          </span>
          <% } %> <% if (product.club) { %>
          <span
            class="inline-block bg-purple-100 rounded-full px-2 py-1 text-xs text-purple-600"
          >
            <%= typeof product.club === 'object' ? product.club.name : 'Club' %>
          </span>
          <% } %> <% if (product.type) { %>
          <span
            class="inline-block bg-blue-100 rounded-full px-2 py-1 text-xs text-blue-600"
          >
            <%= product.type %>
          </span>
          <% } %>
        </div>

        <!-- Description -->
        <p class="text-sm text-gray-600 mb-3 h-12 overflow-hidden line-clamp-2">
          <%= product.description || 'No description available' %>
        </p>

        <!-- Size & Color -->
        <div class="flex gap-2 mb-3">
          <% if (product.size) { %>
          <div class="text-xs bg-gray-100 px-2 py-1 rounded">
            Size: <%= product.size %>
          </div>
          <% } %> <% if (product.color) { %>
          <div class="text-xs bg-gray-100 px-2 py-1 rounded flex items-center">
            <div class="w-3 h-3 rounded-full mr-1" <%="product.color" %>"></div>
            <%= product.color %>
          </div>
          <% } %>
        </div>

        <!-- Action Buttons -->
        <div class="flex justify-between pt-2 border-t border-gray-100">
          <button
            class="text-blue-500 hover:text-blue-700 view-product-btn"
            data-id="<%= product._id %>"
          >
            <svg
              class="w-5 h-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
              />
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
              />
            </svg>
          </button>

          <button
            class="text-purple-500 hover:text-purple-700 edit-product-btn"
            data-id="<%= product._id %>"
          >
            <svg
              class="w-5 h-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
              />
            </svg>
          </button>

          <button
            class="text-red-500 hover:text-red-700 delete-product-btn"
            data-id="<%= product._id %>"
          >
            <svg
              class="w-5 h-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
              />
            </svg>
          </button>
        </div>
      </div>
    </div>
    <% }); %> <% } else { %>
    <div
      class="col-span-full bg-white rounded-lg shadow p-6 text-center text-gray-500"
    >
      No products found.
    </div>
    <% } %>
  </div>

  <!-- Pagination -->
  <div class="mt-8 flex justify-center">
    <nav class="flex items-center space-x-1">
      <% if (currentPage > 1) { %>
      <a
        href="?page=<%= currentPage - 1 %>"
        class="px-3 py-2 rounded-md bg-white border border-gray-300 text-gray-500 hover:bg-gray-50"
      >
        <svg
          class="h-5 w-5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 19l-7-7 7-7"
          />
        </svg>
      </a>
      <% } else { %>
      <span
        class="px-3 py-2 rounded-md bg-gray-100 border border-gray-300 text-gray-400 cursor-not-allowed"
      >
        <svg
          class="h-5 w-5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 19l-7-7 7-7"
          />
        </svg>
      </span>
      <% } %> <% for(let i = 1; i <= totalPages; i++) { %> <% if (i ===
      currentPage) { %>
      <span class="px-3 py-2 rounded-md bg-purple-600 text-white">
        <%= i %>
      </span>
      <% } else if (i === 1 || i === totalPages || (i >= currentPage - 1 && i <=
      currentPage + 1)) { %>
      <a
        href="?page=<%= i %>"
        class="px-3 py-2 rounded-md bg-white border border-gray-300 text-gray-700 hover:bg-gray-50"
      >
        <%= i %>
      </a>
      <% } else if (i === currentPage - 2 || i === currentPage + 2) { %>
      <span class="px-3 py-2">...</span>
      <% } %> <% } %> <% if (currentPage < totalPages) { %>
      <a
        href="?page=<%= currentPage + 1 %>"
        class="px-3 py-2 rounded-md bg-white border border-gray-300 text-gray-500 hover:bg-gray-50"
      >
        <svg
          class="h-5 w-5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"
          />
        </svg>
      </a>
      <% } else { %>
      <span
        class="px-3 py-2 rounded-md bg-gray-100 border border-gray-300 text-gray-400 cursor-not-allowed"
      >
        <svg
          class="h-5 w-5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"
          />
        </svg>
      </span>
      <% } %>
    </nav>
  </div>
</div>

<!-- Image Modal -->
<div
  id="imageModal"
  class="fixed inset-0 bg-black bg-opacity-75 flex items-center justify-center z-50 hidden"
>
  <div class="bg-white rounded-lg max-w-4xl w-full mx-4 overflow-hidden">
    <!-- Modal Header -->
    <div class="flex justify-between items-center p-4 border-b">
      <h3 id="modalTitle" class="text-lg font-semibold text-gray-800"></h3>
      <button id="closeModal" class="text-gray-500 hover:text-gray-700">
        <svg
          class="w-6 h-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"
          />
        </svg>
      </button>
    </div>

    <!-- Modal Body -->
    <div class="p-4">
      <div class="relative">
        <!-- Main Image -->
        <div class="flex justify-center">
          <img
            id="mainImage"
            src="/placeholder.svg"
            alt="Product image"
            class="max-h-96 object-contain"
          />
        </div>

        <!-- Navigation Arrows -->
        <button
          id="prevImage"
          class="absolute left-0 top-1/2 transform -translate-y-1/2 bg-white bg-opacity-75 rounded-full p-2 shadow-md"
        >
          <svg
            class="w-6 h-6 text-gray-800"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 19l-7-7 7-7"
            />
          </svg>
        </button>

        <button
          id="nextImage"
          class="absolute right-0 top-1/2 transform -translate-y-1/2 bg-white bg-opacity-75 rounded-full p-2 shadow-md"
        >
          <svg
            class="w-6 h-6 text-gray-800"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7"
            />
          </svg>
        </button>
      </div>

      <!-- Thumbnails -->
      <div id="thumbnailContainer" class="flex gap-2 mt-4 overflow-x-auto pb-2">
        <!-- Thumbnails will be inserted here by JavaScript -->
      </div>
    </div>
  </div>
</div>
