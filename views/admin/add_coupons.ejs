<div id="addCoupon" class="container mx-auto py-12 px-4 sm:px-6 lg:px-8 max-w-7xl">
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-10 gap-4">
      <h1 class="text-3xl font-bold text-gray-900 tracking-tight">Create New Coupon</h1>
      <a href="/admin/coupons" 
         class="group bg-black text-white px-5 py-2.5 rounded-lg font-medium hover:bg-gray-800 transition-all duration-300 flex items-center shadow-sm">
        <svg class="w-5 h-5 mr-2 transition-transform duration-300 group-hover:-translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Coupons
      </a>
    </div>
  
    <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
      <div class="p-6 sm:p-10">
        <form action="/admin/coupons/create" method="POST">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Basic Information -->
            <div class="bg-gray-50 rounded-xl p-6 border border-gray-100 transition-all duration-300 hover:shadow-md">
              <h5 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
                <span class="bg-black text-white w-8 h-8 rounded-full inline-flex items-center justify-center mr-3 text-sm">1</span>
                Basic Information
              </h5>
              <div class="space-y-5">
                <div>
                  <label for="code" class="block text-sm font-medium text-gray-700 mb-2">Coupon Code *</label>
                  <input type="text" class="form-input w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:ring-3 transition-all duration-200" 
                         id="code" name="code" required placeholder="e.g., SUMMER25" maxlength="20">
                  <p class="text-xs text-gray-500 mt-2">Unique code for the coupon (max 20 characters)</p>
                </div>
                
                <div>
                  <label for="description" class="block text-sm font-medium text-gray-700 mb-2">Description *</label>
                  <textarea class="form-textarea w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:ring-3 transition-all duration-200" 
                            id="description" name="description" rows="3" required placeholder="Describe your coupon"></textarea>
                </div>
  
                <div class="flex items-center">
                  <div class="relative inline-block w-12 mr-2 align-middle select-none">
                    <input type="checkbox" id="isActive" name="isActive" checked 
                           class="absolute block w-6 h-6 bg-white border-2 border-gray-300 rounded-full appearance-none cursor-pointer checked:right-0 checked:border-black checked:bg-black transition-all duration-200"/>
                    <label for="isActive" class="block h-6 overflow-hidden bg-gray-200 rounded-full cursor-pointer"></label>
                  </div>
                  <label for="isActive" class="text-sm font-medium text-gray-700">Active</label>
                </div>
              </div>
            </div>
  
            <!-- Discount Settings -->
            <div class="bg-gray-50 rounded-xl p-6 border border-gray-100 transition-all duration-300 hover:shadow-md">
              <h5 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
                <span class="bg-black text-white w-8 h-8 rounded-full inline-flex items-center justify-center mr-3 text-sm">2</span>
                Discount Settings
              </h5>
              <div class="space-y-5">
                <div>
                  <label for="discountType" class="block text-sm font-medium text-gray-700 mb-2">Discount Type *</label>
                  <select class="form-select w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:ring-3 transition-all duration-200" 
                          id="discountType" name="discountType" required>
                    <option value="percentage">Percentage</option>
                    <option value="fixed">Fixed Amount</option>
                  </select>
                </div>
  
                <div>
                  <label for="discountAmount" class="block text-sm font-medium text-gray-700 mb-2">Discount Amount *</label>
                  <div class="flex">
                    <span class="inline-flex items-center justify-center px-4 text-sm text-gray-700 bg-gray-100 border-2 border-r-0 border-gray-200 rounded-l-lg discount-symbol font-medium">%</span>
                    <input type="number" class="form-input w-full px-4 py-3 border-2 border-gray-200 rounded-r-lg focus:ring-3 transition-all duration-200" 
                           id="discountAmount" name="discountAmount" min="0" step="0.01" required>
                  </div>
                </div>
  
                <div>
                  <label for="minimumPurchase" class="block text-sm font-medium text-gray-700 mb-2">Minimum Purchase Amount</label>
                  <div class="flex">
                    <span class="inline-flex items-center justify-center px-4 text-sm text-gray-700 bg-gray-100 border-2 border-r-0 border-gray-200 rounded-l-lg font-medium">$</span>
                    <input type="number" class="form-input w-full px-4 py-3 border-2 border-gray-200 rounded-r-lg focus:ring-3 transition-all duration-200" 
                           id="minimumPurchase" name="minimumPurchase" min="0" step="0.01" value="0">
                  </div>
                </div>
              </div>
            </div>
  
            <!-- Validity Settings -->
            <div class="bg-gray-50 rounded-xl p-6 border border-gray-100 transition-all duration-300 hover:shadow-md">
              <h5 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
                <span class="bg-black text-white w-8 h-8 rounded-full inline-flex items-center justify-center mr-3 text-sm">3</span>
                Validity Settings
              </h5>
              <div class="space-y-5">
                <div>
                  <label for="startDate" class="block text-sm font-medium text-gray-700 mb-2">Start Date *</label>
                  <input type="datetime-local" class="form-input w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:ring-3 transition-all duration-200" 
                         id="startDate" name="startDate" required>
                </div>
  
                <div>
                  <label for="endDate" class="block text-sm font-medium text-gray-700 mb-2">End Date *</label>
                  <input type="datetime-local" class="form-input w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:ring-3 transition-all duration-200" 
                         id="endDate" name="endDate" required>
                </div>
  
                <div>
                  <label for="usageLimit" class="block text-sm font-medium text-gray-700 mb-2">Usage Limit</label>
                  <input type="number" class="form-input w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:ring-3 transition-all duration-200" 
                         id="usageLimit" name="usageLimit" min="1" placeholder="Leave empty for unlimited">
                  <p class="text-xs text-gray-500 mt-2">Maximum number of times this coupon can be used</p>
                </div>
              </div>
            </div>
  
            <!-- Applicability -->
            <div class="bg-white rounded-xl p-6 border border-gray-200 transition-all duration-300 hover:shadow-md">
                <h5 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
                  <span class="bg-gray-900 text-white w-8 h-8 rounded-full inline-flex items-center justify-center mr-3 text-sm">4</span>
                  Coupon Applicability
                </h5>
                <div class="space-y-6">
                  <!-- Applicable Products -->
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-3">Applicable Products</label>
                    <div class="space-y-3 max-h-48 overflow-y-auto pr-2">
                      <label class="flex items-center space-x-3 p-2 rounded-lg hover:bg-gray-100 transition duration-200 cursor-pointer">
                        <input type="checkbox" name="applicableProducts" value="" 
                               class="h-5 w-5 text-gray-900 border-gray-300 rounded focus:ring-gray-400 transition duration-200">
                        <span class="text-sm text-gray-700">Apply to all products</span>
                      </label>
                      <!-- Product options would be dynamically generated -->
                      <% products.forEach(product => { %>
                        <label class="flex items-center space-x-3 p-2 rounded-lg hover:bg-gray-100 transition duration-200 cursor-pointer">
                          <input type="checkbox" name="applicableProducts" value="<%= product._id %>" 
                                 class="h-5 w-5 text-gray-900 border-gray-300 rounded focus:ring-gray-400 transition duration-200">
                          <span class="text-sm text-gray-700"><%= product.title %></span>
                        </label>
                      <% }); %>
                    </div>
                    <p class="text-xs text-gray-500 mt-2">Select to apply to specific products or choose "all products"</p>
                  </div>
              
                  <!-- Applicable Categories -->
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-3">Applicable Categories</label>
                    <div class="space-y-3 max-h-48 overflow-y-auto pr-2">
                      <label class="flex items-center space-x-3 p-2 rounded-lg hover:bg-gray-100 transition duration-200 cursor-pointer">
                        <input type="checkbox" name="applicableCategories" value="" 
                               class="h-5 w-5 text-gray-900 border-gray-300 rounded focus:ring-gray-400 transition duration-200">
                        <span class="text-sm text-gray-700">Apply to all categories</span>
                      </label>
                      <!-- Category options would be dynamically generated -->
                      <% categories.forEach(category => { %>
                        <label class="flex items-center space-x-3 p-2 rounded-lg hover:bg-gray-100 transition duration-200 cursor-pointer">
                          <input type="checkbox" name="applicableCategories" value="<%= category._id %>" 
                                 class="h-5 w-5 text-gray-900 border-gray-300 rounded focus:ring-gray-400 transition duration-200">
                          <span class="text-sm text-gray-700"><%= category.name %></span>
                        </label>
                      <% }); %>
                    </div>
                    <p class="text-xs text-gray-500 mt-2">Select to apply to specific categories or choose "all categories"</p>
                  </div>
                </div>
              </div>
          </div>
  
          <div class="mt-10 flex justify-end space-x-4">
            <button type="reset" class="px-6 py-3 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300 transition-all duration-300 font-medium">
              Reset
            </button>
            <button type="submit" class="px-6 py-3 bg-black text-white rounded-lg hover:bg-gray-800 transition-all duration-300 font-medium shadow-sm">
              Create Coupon
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
  