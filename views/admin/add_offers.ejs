<div class="bg-gray-100 min-h-screen p-4 md:p-6">
    <div class="max-w-6xl mx-auto bg-white shadow-lg rounded-xl p-6 md:p-8">
      <h1 class="text-2xl font-bold mb-6 text-gray-900 border-b pb-4">Add New Offer</h1>
  
      <form id="addOfferForm" action="/admin/offers/add" method="POST" class="space-y-6">
        <div>
          <label class="block text-sm font-medium text-gray-900 mb-2">Offer Name</label>
          <input type="text" name="name" required class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent transition">
          <span class="text-red-500 text-sm mt-1 block" id="nameError"></span>
        </div>
  
        <div>
          <label class="block text-sm font-medium text-gray-900 mb-2">Offer Type</label>
          <div class="flex space-x-4">
            <label class="inline-flex items-center">
              <input type="radio" name="type" value="product"  class="toggle-type h-5 w-5 text-black focus:ring-black">
              <span class="ml-2">Product</span>
            </label>

            <label class="inline-flex items-center">
              <input type="radio" name="type" value="category" class=" toggle-type h-5 w-5 text-black focus:ring-black">
              <span class="ml-2">Category</span>
            </label>
          </div>
          <span class="text-red-500 text-sm mt-1 block" id="typeError"></span>
        </div>
  
        <div id="product-select" class="hidden">
          <label class="block text-sm font-medium text-gray-900 mb-2">Select Products</label>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3 max-h-60 overflow-y-auto p-3 border border-gray-300 rounded-lg">
            <% products.forEach(product => { %>
              <label class="inline-flex items-center">
                <input type="checkbox" name="products[]" value="<%= product._id %>" class="h-5 w-5 text-black focus:ring-black">
                <span class="ml-2"><%= product.title %></span>
              </label>
            <% }); %>
          </div>
          <span class="text-red-500 text-sm mt-1 block" id="productsError"></span>
        </div>
  
        <div id="category-select" class="hidden">
          <label class="block text-sm font-medium text-gray-900 mb-2">Select Categories</label>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3 max-h-60 overflow-y-auto p-3 border border-gray-300 rounded-lg">
            <% categories.forEach(category => { %>
              <label class="inline-flex items-center">
                <input type="checkbox" name="categories[]" value="<%= category._id %>" class="h-5 w-5 text-black focus:ring-black">
                <span class="ml-2"><%= category.name %></span>
              </label>
            <% }); %>
          </div>
          <span class="text-red-500 text-sm mt-1 block" id="categoriesError"></span>
        </div>
  
        <div>
          <label class="block text-sm font-medium text-gray-900 mb-2">Discount Percentage</label>
          <div class="relative">
            <input type="number" name="discountPercentage" required class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent transition">
            <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
              <span class="text-gray-500">%</span>
            </div>
            <span class="text-red-500 text-sm mt-1 block" id="discountPercentageError"></span>
          </div>
        </div>
  
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-medium text-gray-900 mb-2">Valid From</label>
            <input type="date" name="validFrom" id="validFrom" required class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent transition">
          </div>
  
          <div>
            <label class="block text-sm font-medium text-gray-900 mb-2">Valid To</label>
            <input type="date" name="validTo" id="validTo" required class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent transition">
          </div>
        </div>
  
        <div class="pt-4">
          <button type="submit" class="w-full md:w-auto px-6 py-3 bg-black text-white font-medium rounded-lg hover:bg-gray-800 transition duration-200 ease-in-out">
            Create Offer
          </button>
        </div>
      </form>
    </div>
  </div>
  