<div class="container mx-auto py-8 px-4">
  <div class="flex flex-col space-y-6">
    <!-- header started -->
    <%- include('../partials/category_header') %>
    <!-- headerfinished -->

    <div
      class="bg-white rounded-lg border border-gray-200 shadow-sm overflow-hidden"
    >
      <div class="table-container">
        <table class="min-w-full divide-y divide-gray-200">
          <thead>
            <tr class="bg-gray-50">
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500">
                ID
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500">
                Name
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500">
                Description
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500">
                Status
              </th>
              <th
                class="px-6 py-3 text-right text-xs font-medium text-gray-500"
              >
                Actions
              </th>
            </tr>
          </thead>
          <tbody
            id="categoryTableBody"
            class="bg-white divide-y divide-gray-100"
          ></tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<!-- ..............modal.......... -->
<div
  id="modal"
  class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden"
>
  <!-- Modal Content -->
  <div class="bg-white text-black p-8 rounded-lg w-[500px] shadow-lg relative">
    <!-- Close Button -->
    <button
      id="closeBtn"
      class="absolute top-2 right-2 text-gray-600 hover:text-black text-2xl"
    >
      &times;
    </button>

    <h2 class="text-2xl font-bold mb-4">Add Category</h2>

    <form
      id="categoryForm"
      action="add-category"
      method="post"
      enctype="multipart/form-data"
    >
      <!-- Name -->
      <div class="mb-4">
        <label class="block font-semibold"
          >Name <span class="text-red-500">*</span></label
        >
        <input
          type="text"
          id="name"
          class="w-full px-4 py-3 border border-gray-400 rounded-md focus:outline-none focus:ring-2 focus:ring-black"
          required
          name="name"
        />
      </div>

      <!-- Description -->
      <div class="mb-4">
        <label class="block font-semibold">Description</label>
        <textarea
          id="description"
          name="description"
          class="w-full px-4 py-3 border border-gray-400 rounded-md focus:outline-none focus:ring-2 focus:ring-black"
        ></textarea>
      </div>

      <!-- Image Upload -->
      <div class="mb-4">
        <label class="block font-semibold">Upload Image</label>
        <input
          type="file"
          id="image"
          name="image"
          class="w-full px-4 py-3 border border-gray-400 rounded-md focus:outline-none focus:ring-2 focus:ring-black bg-white"
        />
      </div>

      <!-- Submit Button -->
      <button
        type="submit"
        class="w-full bg-black text-white py-3 rounded-md hover:bg-gray-800"
      >
        Submit
      </button>
    </form>
  </div>
</div>
