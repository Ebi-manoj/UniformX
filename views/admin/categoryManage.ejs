<div class="container mx-auto py-8 px-4">
  <div class="flex flex-col space-y-6">
    <!-- header started -->
    <%- include('../partials/category_header') %>
    <!-- headerfinished -->

    <div
      class="bg-white rounded-lg border border-gray-200 shadow-sm overflow-hidden"
    >
      <div class="table-container">
        <table class="min-w-full divide-y divide-gray-200">
          <thead>
            <tr class="bg-gray-50">
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500">
                ID
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500">
                Name
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500">
                Description
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500">
                Status
              </th>
              <th
                class="px-6 py-3 text-right text-xs font-medium text-gray-500"
              >
                Actions
              </th>
            </tr>
          </thead>
          <tbody
            id="categoryTableBody"
            class="bg-white divide-y divide-gray-100"
          >
            <% if (categories && categories.length > 0) { %> <%
            categories.forEach((category,index) => { %>
            <tr class="border-b border-gray-300">
              <td class="px-6 py-4"><%= index+1 %></td>
              <td class="px-6 py-4"><%= category.name %></td>
              <td class="px-6 py-4"><%= category.description || 'N/A' %></td>
              <td class="px-6 py-4">
                <% if (category.isActive) { %>
                <span class="text-green-500 font-semibold">Active</span>
                <% } else { %>
                <span class="text-red-500 font-semibold">Inactive</span>
                <% } %>
              </td>
              <td class="px-6 py-4 text-right">
                <button
                  class="text-blue-500 hover:underline"
                  onclick="editCategory('<%= category._id %>')"
                >
                  <i class="fas fa-edit"></i>
                </button>
                <button
                  class="text-red-500 hover:underline ml-3"
                  onclick="deleteCategory('<%= category._id %>')"
                >
                  <i class="fas fa-trash"></i>
                </button>
              </td>
            </tr>
            <% }); %> <% } else { %>
            <tr>
              <td colspan="5" class="px-6 py-4 text-center text-gray-500">
                No categories found.
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<!-- ..............modal.......... -->
<div
  id="modal"
  class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden"
>
  <!-- Modal Content -->
  <div class="bg-white text-black p-8 rounded-lg w-[500px] shadow-lg relative">
    <!-- Close Button -->
    <button
      id="closeBtn"
      class="absolute top-2 right-2 text-gray-600 hover:text-black text-2xl"
    >
      &times;
    </button>

    <h2 class="text-2xl font-bold mb-4">Add Category</h2>

    <form
      id="categoryForm"
      action="add-category"
      method="post"
      enctype="multipart/form-data"
    >
      <!-- Name -->
      <div class="mb-4">
        <label class="block font-semibold"
          >Name <span class="text-red-500">*</span></label
        >
        <input
          type="text"
          id="name"
          class="w-full px-4 py-3 border border-gray-400 rounded-md focus:outline-none focus:ring-2 focus:ring-black"
          required
          name="name"
        />
      </div>

      <!-- Description -->
      <div class="mb-4">
        <label class="block font-semibold">Description</label>
        <textarea
          id="description"
          name="description"
          class="w-full px-4 py-3 border border-gray-400 rounded-md focus:outline-none focus:ring-2 focus:ring-black"
        ></textarea>
      </div>

      <!-- Image Upload -->
      <div class="mb-4">
        <label class="block font-semibold">Upload Image</label>
        <input
          type="file"
          id="image"
          name="image"
          class="w-full px-4 py-3 border border-gray-400 rounded-md focus:outline-none focus:ring-2 focus:ring-black bg-white"
        />
      </div>

      <!-- Submit Button -->
      <button
        type="submit"
        class="w-full bg-black text-white py-3 rounded-md hover:bg-gray-800"
      >
        Submit
      </button>
    </form>
  </div>
</div>
