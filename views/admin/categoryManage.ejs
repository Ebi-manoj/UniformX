<div class="container mx-auto py-8 px-4">
  <div class="flex flex-col space-y-6">
    <!-- header started -->
    <%- include('../partials/category_header') %>
    <!-- headerfinished -->
    <div
      class="bg-white rounded-lg border border-gray-200 shadow-sm overflow-hidden"
    >
      <div class="table-container">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-100 border-b">
            <tr class="bg-gray-50">
              <th
                class="px-6 py-3 text-left text-lg font-medium text-black-500"
              >
                No.
              </th>
              <th
                class="px-6 py-3 text-left text-lg font-medium text-black-500"
              >
                Name
              </th>
              <th
                class="px-6 py-3 text-left text-lg font-medium text-black-500"
              >
                Description
              </th>
              <th
                class="px-6 py-3 text-left text-lg font-medium text-black-500"
              >
                Status
              </th>
              <th
                class="px-6 py-3 text-right text-lg font-medium text-black-500"
              >
                Actions
              </th>
            </tr>
          </thead>
          <tbody
            id="categoryTableBody"
            class="bg-white divide-y divide-gray-100"
          >
            <% if (categories && categories.length > 0) { %> <%
            categories.forEach((category, index) => { %>
            <tr class="border-b border-gray-300">
              <td class="px-6 py-4">
                <%= (currentPage - 1) * limit + index + 1 %>
              </td>
              <td class="px-6 py-4"><%= category.name %></td>
              <td class="px-6 py-4"><%= category.description || 'N/A' %></td>
              <td class="px-6 py-4">
                <% if (category.isActive) { %>
                <span
                  class="px-3 py-1 text-sm font-semibold text-green-700 bg-green-200 rounded-full"
                >
                  Active
                </span>
                <% } else { %>
                <span
                  class="px-3 py-1 text-sm font-semibold text-red-700 bg-red-200 rounded-full"
                >
                  Inactive
                </span>
                <% } %>
              </td>

              <td class="px-6 py-4 text-right">
                <button
                  class="text-blue-500 hover:underline edit-category-btn"
                  data-id="<%= category._id %>"
                  data-name="<%= category.name %>"
                  data-description="<%= category.description %>"
                  data-image="<%= category.image %>"
                >
                  <i class="fas fa-edit"></i>
                </button>

                <button class="text-red-500 hover:underline ml-3">
                  <i class="fas fa-trash"></i>
                </button>
              </td>
            </tr>
            <% }); %> <% } else { %>
            <tr>
              <td colspan="5" class="px-6 py-4 text-center text-gray-500">
                No categories found.
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <% if (totalPages > 1) { %>
      <div class="px-6 py-4 bg-white border-t border-gray-200">
        <div class="flex justify-between items-center">
          <div class="text-sm text-gray-600">
            Showing <%= (currentPage - 1) * limit + 1 %> to <%=
            Math.min(currentPage * limit, totalCount) %> of <%= totalCount %>
            results
          </div>
          <div class="flex space-x-1">
            <% if (currentPage > 1) { %>
            <a
              href="/admin/categories?page=<%= currentPage - 1 %><%= searchQuery ? `&search=${searchQuery}` : '' %>"
              class="px-3 py-1 rounded-md border border-gray-300 text-gray-600 hover:bg-gray-100"
            >
              Previous
            </a>
            <% } %> <% for(let i = 1; i <= totalPages; i++) { %>
            <a
              href="/admin/categories?page=<%= i %><%= searchQuery ? `&search=${searchQuery}` : '' %>"
              class="px-3 py-1 rounded-md border <%= currentPage === i ? 'bg-black text-white' : 'border-gray-300 text-gray-600 hover:bg-gray-100' %>"
            >
              <%= i %>
            </a>
            <% } %> <% if (currentPage < totalPages) { %>
            <a
              href="/admin/categories?page=<%= currentPage + 1 %><%= searchQuery ? `&search=${searchQuery}` : '' %>"
              class="px-3 py-1 rounded-md border border-gray-300 text-gray-600 hover:bg-gray-100"
            >
              Next
            </a>
            <% } %>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>

<!-- Add/Edit Category Modal -->
<div
  id="modal"
  class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden"
>
  <div class="bg-white text-black p-8 rounded-lg w-[500px] shadow-lg relative">
    <button
      id="closeBtn"
      class="absolute top-2 right-2 text-gray-600 hover:text-black text-2xl"
    >
      &times;
    </button>

    <h2 id="modalTitle" class="text-2xl font-bold mb-4">Add Category</h2>

    <form
      id="categoryForm"
      action="/admin/add-category"
      method="post"
      enctype="multipart/form-data"
    >
      <input type="hidden" id="categoryId" name="categoryId" />

      <!-- Name -->
      <div class="mb-4">
        <label class="block font-semibold"
          >Name <span class="text-red-500">*</span></label
        >
        <input
          type="text"
          id="name"
          class="w-full px-4 py-3 border border-gray-400 rounded-md focus:outline-none focus:ring-2 focus:ring-black"
          required
          name="name"
        />
      </div>

      <!-- Description -->
      <div class="mb-4">
        <label class="block font-semibold">Description</label>
        <textarea
          id="description"
          name="description"
          class="w-full px-4 py-3 border border-gray-400 rounded-md focus:outline-none focus:ring-2 focus:ring-black"
        ></textarea>
      </div>

      <!-- Image Upload -->
      <div class="mb-4">
        <label class="block font-semibold">Upload Image</label>
        <input
          type="file"
          id="image"
          name="image"
          class="w-full px-4 py-3 border border-gray-400 rounded-md focus:outline-none focus:ring-2 focus:ring-black bg-white"
        />
      </div>

      <!-- Submit Button -->
      <button
        type="submit"
        class="w-full bg-black text-white py-3 rounded-md hover:bg-gray-800"
      >
        Submit
      </button>
    </form>
  </div>
</div>

<!-- Delete Confirmation Modal -->
<div
  id="deleteModal"
  class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden"
>
  <div class="bg-white text-black p-6 rounded-lg w-96 shadow-lg">
    <h3 class="text-xl font-bold mb-4">Confirm Deletion</h3>
    <p class="mb-6">
      Are you sure you want to delete this category? This action cannot be
      undone.
    </p>
    <div class="flex justify-end space-x-3">
      <button
        id="cancelDelete"
        class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-100"
      >
        Cancel
      </button>
      <form id="deleteForm" action="/admin/delete-category" method="POST">
        <input type="hidden" id="deleteCategoryId" name="categoryId" />
        <button
          type="submit"
          class="px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700"
        >
          Delete
        </button>
      </form>
    </div>
  </div>
</div>
