    <!-- Features Section -->
    <section class="py-12 px-4 sm:px-6 lg:px-8 bg-white">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Free Shipping -->
          <div class="flex flex-col items-center text-center">
            <div
              class="w-12 h-12 flex items-center justify-center rounded-full bg-gray-100 mb-4"
            >
              <i class="fas fa-truck text-gray-600"></i>
            </div>
            <h3 class="font-medium text-gray-900">Free Shipping</h3>
            <p class="mt-2 text-sm text-gray-500">
              On orders over $50. Delivery time: 3-5 business days.
            </p>
          </div>

          <!-- Satisfaction Guarantee -->
          <div class="flex flex-col items-center text-center">
            <div
              class="w-12 h-12 flex items-center justify-center rounded-full bg-gray-100 mb-4"
            >
              <i class="fas fa-shield-alt text-gray-600"></i>
            </div>
            <h3 class="font-medium text-gray-900">Satisfaction Guarantee</h3>
            <p class="mt-2 text-sm text-gray-500">
              Shop with confidence with our 30-day return policy.
            </p>
          </div>

          <!-- Secure Payment -->
          <div class="flex flex-col items-center text-center">
            <div
              class="w-12 h-12 flex items-center justify-center rounded-full bg-gray-100 mb-4"
            >
              <i class="fas fa-lock text-gray-600"></i>
            </div>
            <h3 class="font-medium text-gray-900">Secure Payment</h3>
            <p class="mt-2 text-sm text-gray-500">
              Pay safely with our secure checkout options.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Best Selling Section -->
    <section class="py-16 px-4 sm:px-6 lg:px-8 bg-white">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-2xl font-bold text-gray-900">Best Selling</h2>
        </div>
    
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
          <% bestSelling.forEach(product => { %>
            <div class="group border border-gray-100 py-3 px-3 bg-white  rounded-lg overflow-hidden">
              <div class="aspect-w-1 aspect-h-1 bg-white rounded-lg overflow-hidden">
                <a href="/product/<%= product.slug %>">
                  <img 
                  src="<%= product.image_url[0] %>" 
                  alt="<%= product.title %>" 
                  class="w-full h-64 object-contain"
                />
                </a>
              </div>
              <div class="mt-4">
                <h3 class="text-base text-gray-700 font-semibold"><%= product.title %></h3>
                <div class="flex items-center mt-2">
                  <% if (product.discountPercentage) { %>
                    <span class="text-xs text-red-500 line-through mr-2">&#8377;<%= product.price %></span>
                    <span class="text-sm font-bold text-gray-900 mr-2">
                      &#8377;<%= (product.price - (product.price * product.discountPercentage / 100)).toFixed(2) %>
                    </span>
                    <span class="text-sm font-semibold text-green-600">(-<%= product.discountPercentage %>%)</span>
                  <% } else { %>
                    <span class="text-sm font-bold text-gray-900">&#8377;<%= product.price %></span>
                  <% } %>
                </div>
                <div class="mt-2 flex items-center">
                  <div class="flex">
                    <% for(let i = 0; i < 5; i++) { %>
                      <% if (i < Math.round(product.averageRating)) { %>
                        <i class="fas fa-star text-yellow-400 text-xs"></i>
                      <% } else { %>
                        <i class="far fa-star text-gray-300 text-xs"></i>
                      <% } %>
                    <% } %>
                  </div>
                  <span class="ml-2 text-xs text-gray-600">(<%= product.averageRating %>)</span>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
        
      </div>
    </section>
    

    <!-- Game Day Ready Section -->
