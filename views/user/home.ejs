<section class="relative bg-gray-50 px-4 sm:px-6 lg:px-36">
      <div class="mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-10 items-center">
          <div>
            <h1 class="text-5xl font-medium text-gray-900">
              Fresh Arrivals Online
            </h1>
            <p class="mt-2 text-base text-gray-600">
              Discover Our Newest Collection Today
            </p>
            <a href="/products">
              <button
              class="mt-6 bg-gray-900 text-white px-6 py-2 text-sm font-medium rounded hover:bg-gray-800 transition-colors"
            >
