<div class="bg-white min-h-screen flex items-center justify-center">
    <div class="max-w-md w-full px-6 py-8">
        <div class="text-center mb-8">
            <p class="text-gray-800 mb-1">The OTP was sent to your registered email</p>
            <p class="text-gray-600 text-sm">Please check the spam folder.</p>
            
            <!-- Timer -->
            <div class="mt-4">
                <span id="timer" class="text-gray-500 font-medium" data-expiry-time="<%= expiresAt %>">02:00</span>
            </div>
            
        </div>
        
        <div class="mb-6">
            <label for="otp" class="block text-sm font-medium text-gray-700 mb-2">Enter OTP</label>
            <input 
                type="text" 
                id="otp" 
                maxlength="6" 
                class="otp-input border border-gray-300 rounded-md py-3 px-4 w-full focus:outline-none focus:ring-1 focus:ring-gray-400 focus:border-gray-400"
                autocomplete="one-time-code"
            >
        </div>
        
        <button 
            id="verify-btn"
            class="w-full bg-gray-900 text-white py-3 rounded-md hover:bg-gray-800 transition duration-200 uppercase font-medium"
        >
            Verify
        </button>
        
        <!-- Resend OTP option -->
        <div class="mt-4 text-center">
            <p class="text-sm text-gray-600">
                Didn't receive the code? 
                <button 
                    id="resend-btn" 
                    class="text-blue-600 font-medium hover:underline disabled:text-gray-400 disabled:cursor-not-allowed disabled:no-underline"
                    disabled
                >
                    Resend OTP
                </button>
            </p>
        </div>
    </div>
</div>