
<div class="bg-white min-h-screen flex relative text-gray-500">
    <%- include('../partials/profile_sidebar') %>
<div id="change-password" class="bg-white p-8   mt-10 pl-10 border-l-[1px] border-gray-200  max-w-sm w-full">
    <h2 class="text-2xl font-bold mb-6 text-black">Change Password</h2>
    <form action="/profile/change-password" method="POST" class="space-y-4">
      <!-- Old Password -->
      <div>
        <label for="old-password" class="block text-sm font-medium"
          >Current Password</label
        >
        <input
          type="password"
          id="old-password"
          name="oldpassword"
          required
          class="w-full p-2 text-black border border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-white"
        />
      </div>

      <!-- New Password -->
      <div>
        <label for="new-password" class="block text-sm font-medium"
          >New Password</label
        >
        <input
          type="password"
          id="new-password"
          name="newpassword"
          required
          class="w-full p-2 text-black border border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-white"
        />
      </div>

      <!-- Confirm New Password -->
      <div>
        <label for="confirm-password" class="block text-sm font-medium"
          >Confirm Password</label
        >
        <input
          type="password"
          id="confirm-password"
          name="confirmpassword"
          required
          class="w-full p-2 text-black border border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-white"
        />
      </div>

      <!-- Submit Button -->
      <div>
        <button
          type="submit"
          class="w-[50%] p-2 bg-black hover:bg-gray-800 text-white font-semibold rounded-md focus:outline-none"
        >
          Change Password
        </button>
      </div>
    </form>
  </div>
</div>