<div class="bg-gray-50 min-h-screen">
    <!-- Header -->
    <header class="bg-red-100 py-4">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-lg font-semibold text-gray-900">Order Failed</h1>
        <div class="flex items-center text-sm text-gray-600 mt-1">
          <a href="#" class="hover:underline">UnifromX</a>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-4 w-4 mx-2"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7"
            />
          </svg>
          <span>Order Failed</span>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="max-w-md mx-auto text-center">
        <!-- Error Icon -->
        <div
          class="inline-flex items-center justify-center h-24 w-24 rounded-full bg-red-100 mb-6"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-12 w-12 text-red-600"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"
            />
          </svg>
        </div>

        <!-- Message -->
        <h2 class="text-2xl font-bold text-gray-900 mb-3">
          We couldn't process your order
        </h2>
        <p class="text-gray-600 mb-8">
          Unfortunately, there was an issue processing your payment. Your order
          has not been placed.
        </p>

        <!-- Order Details -->
        <div
          class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-8"
        >
          <div class="flex justify-between items-center mb-4">
            <span class="text-sm font-medium text-gray-500"
              >Order Reference</span
            >
            <span class="text-sm font-medium text-gray-900"><%= details.orderId %></span>
          </div>
          <div class="flex justify-between items-center mb-4">
            <span class="text-sm font-medium text-gray-500">Date</span>
            <span class="text-sm font-medium text-gray-900"
              ><%= details.date %></span
            >
          </div>
          <div class="flex justify-between items-center">
            <span class="text-sm font-medium text-gray-500">Status</span>
            <span class="text-sm font-medium text-red-600"
              >Payment Declined</span
            >
          </div>
        </div>

        <!-- Actions -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/"
            class="inline-flex items-center justify-center px-5 py-2.5 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500"
          >
            Contact Support
          </a>
          <button
             id="retry-btn"
             data-order-id="<%= details.orderId %>"
            class="inline-flex items-center justify-center px-5 py-2.5 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500"
          >
            Try Again
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4 ml-2"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M14 5l7 7m0 0l-7 7m7-7H3"
              />
            </svg>
        </button>
        </div>
      </div>
    </main>

    <!-- Footer -->
    <footer class="mt-16 py-8 border-t border-gray-200">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center text-sm text-gray-500">
          <p>
            If you need assistance, please contact our customer support at
            <a
              href="mailto:support@example.com"
              class="text-red-600 hover:underline"
              >support@example.com</a
            >
          </p>
        </div>
      </div>
    </footer>
</div>
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>