<style>
    .input-disabled {
      @apply bg-gray-50 text-gray-700 border-gray-200;
    }
  </style>
  <div class="bg-white min-h-screen flex relative">
    <%- include('../partials/profile_sidebar') %>
    <div class="flex w-full ml-64 px-6 py-4 justify-center">
      <div class="bg-white w-[70%] rounded-lg shadow-sm p-6">
        <div class="flex justify-between items-center mb-6">
          <h2 class="text-xl font-medium">Shipping address</h2>
          <div class="relative flex gap-3">
            <button
              class="flex items-center py-1 bg-black text-white rounded-md px-2 hover:bg-gray-800 transition-colors"
              id="addAddressBtn"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 mr-2"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M12 5v14M5 12h14"></path>
              </svg>
              Add new
            </button>
          </div>
        </div>
        <input type="hidden" id="allAddresses" value='<%- JSON.stringify(addresses) %>'>
        <div class="w-full flex justify-end">
          <select id="addressSelect" class="border rounded-md px-3 py-2">
            <% addresses.forEach((addr, index) => { %>
              <option value="<%= index %>"><%= addr.name %></option>
            <% }) %>
          </select>
        </div>
        <form id="addressForm" action="/profile/update-address" method="post">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-5">
            <input type="hidden" value="" name="id" id="addressId">
            <!-- Street Address -->
            <div class="md:col-span-2">
              <label for="street" class="block text-sm font-medium text-gray-700 mb-1">Street Address</label>
              <input
                type="text"
                id="street"
                name="address"
                value="2436 Naples Avenue"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent input-disabled"
                disabled
              />
            </div>
            <!-- Full Name -->
            <div>
              <label for="fullName" class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
              <input
                type="text"
                id="fullName"
                name="fullName"
                value="John Doe"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent input-disabled"
                disabled
              />
            </div>
            <!-- District -->
            <div>
              <label for="district" class="block text-sm font-medium text-gray-700 mb-1">District</label>
              <input
                type="text"
                id="district"
                name="district"
                value="Panama City"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent input-disabled"
                disabled
              />
            </div>
            <!-- State -->
            <div>
              <label for="state" class="block text-sm font-medium text-gray-700 mb-1">State</label>
              <input
                type="text"
                id="state"
                name="state"
                value="FL"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent input-disabled"
                disabled
              />
            </div>
            <!-- Pin Code -->
            <div>
              <label for="pincode" class="block text-sm font-medium text-gray-700 mb-1">Pin Code</label>
              <input
                type="text"
                id="pincode"
                name="pincode"
                value="32405"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent input-disabled"
                disabled
              />
            </div>
            <!-- Country -->
            <div>
              <label for="country" class="block text-sm font-medium text-gray-700 mb-1">Country</label>
              <input
                type="text"
                id="country"
                name="country"
                value="United States"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent input-disabled"
                disabled
              />
            </div>
            <!-- Mobile -->
            <div>
              <label for="mobile" class="block text-sm font-medium text-gray-700 mb-1">Mobile</label>
              <input
                type="tel"
                id="mobile"
                name="mobile"
                value="9999550000"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent input-disabled"
                disabled
              />
            </div>
          </div>
          <div class="mt-6 flex gap-5">
            <button
              type="button"
              id="toggleEditBtn"
              class="px-4 py-2 bg-gray-900 flex items-center text-white font-medium rounded-md hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-500 transition-colors"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 mr-2"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"
                />
              </svg>
              Edit
            </button>
            <!-- delete Button -->
            <button
            type="button"
            class="text-red-500 hover:text-red-700"
            data-id=""
            id="address-delete-btn"
            >
            <i class="fas fa-trash"></i>
          </button>
      
          </div>
        </form>
      </div>
    </div>
  </div>
  
  <div id="modalBackdrop" class="fixed inset-0 bg-black bg-opacity-50 hidden"></div>
  
  <!-- Modal -->
  <div id="modalAddress" class="fixed inset-0 flex items-center justify-center hidden">
    <div class="bg-white text-black rounded-lg shadow-lg w-full max-w-lg p-6 relative">
      <button id="closeModalBtn" class="absolute top-4 right-4 text-gray-500 hover:text-gray-700">âœ–</button>
      <h2 class="text-xl font-semibold mb-4">Add New Address</h2>
  
      <!-- Address Form -->
      <form id="newAddressForm" action="/profile/add-address" method="post">
        <div class="grid grid-cols-2 gap-4">
          <!-- Name -->
          <div>
            <label class="text-sm font-medium flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              Full Name
            </label>
            <input type="text" id="newFullName" name="fullName" class="bg-gray-100 w-full p-2 border border-gray-300 rounded-md outline-none" placeholder="Enter Full Name">
          </div>
  
          <!-- Mobile -->
          <div>
            <label class="text-sm font-medium flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              Mobile
            </label>
            <input type="tel" id="newMobile" name="mobile" class="bg-gray-100 w-full p-2 border border-gray-300 rounded-md outline-none" placeholder="Enter Mobile Number">
          </div>
        </div>
  
        <!-- Street Area (Full Width) -->
        <div class="mt-3">
          <label class="text-sm font-medium flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553-2.276A1 1 0 0021 13.382V6.618a1 1 0 00-1.447-.894L15 8m0 9V4m0 13l-6-3" />
            </svg>
            Address
          </label>
          <input type="text" id="newStreet" name="address" class="bg-gray-100 w-full p-2 border border-gray-300 rounded-md outline-none" placeholder="Enter Street/Area">
        </div>
  
        <div class="grid grid-cols-2 gap-4 mt-3">
          <!-- District -->
          <div>
            <label class="text-sm font-medium flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
              District
            </label>
            <input type="text" id="newDistrict" name="district" class="bg-gray-100 w-full p-2 border border-gray-300 rounded-md outline-none" placeholder="Enter District">
          </div>
  
          <!-- State -->
          <div>
            <label class="text-sm font-medium flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
              State
            </label>
            <input type="text" id="newState" name="state" class="bg-gray-100 w-full p-2 border border-gray-300 rounded-md outline-none" placeholder="Enter State">
          </div>
        </div>
  
        <div class="grid grid-cols-2 gap-4 mt-3">
          <!-- Country -->
          <div>
            <label class="text-sm font-medium flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Country
            </label>
            <input type="text" id="newCountry" name="country" class="bg-gray-100 w-full p-2 border border-gray-300 rounded-md outline-none" placeholder="Enter Country">
          </div>
  
          <!-- Pincode -->
          <div>
            <label class="text-sm font-medium flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              Pincode
            </label>
            <input type="text" id="newPincode" name="pincode" class="bg-gray-100 w-full p-2 border border-gray-300 rounded-md outline-none" placeholder="Enter Pincode">
          </div>
        </div>
  
        <!-- Buttons -->
        <div class="flex justify-end space-x-3 mt-4">
          <button type="button" id="closeModalBtn2" class="bg-gray-300 px-4 py-2 rounded-md hover:bg-gray-400 transition">Cancel</button>
          <button type="submit" class="bg-black text-white px-4 py-2 rounded-md hover:bg-gray-800 transition">Save Address</button>
        </div>
      </form>
    </div>
  </div>
  
  