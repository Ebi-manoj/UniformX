                    <i class="far fa-copy"></i>
                    <span>Copy</span>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Modal Footer -->
        <div
          class="px-6 py-4 border-t border-gray-200 bg-gray-50 sticky bottom-0"
        >
          <div class="flex justify-between items-center">
            <button
              id="closeModalBtn2"
              class="ml-auto px-5 py-2 bg-black text-white rounded-lg hover:bg-gray-800 transition-colors duration-200 shadow-sm"
            >
              Close
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

