<div class="flex justify-between items-center">
  <h1 class="text-2xl font-bold">Category Management</h1>
  <button
    id="addCategoryBtn"
    class="bg-black hover:bg-gray-800 text-white px-4 py-2 rounded-md flex items-center"
  >
    <i class="fas fa-plus mr-2"></i> Add Category
  </button>
</div>

<div class="flex flex-col md:flex-row justify-between gap-4">
    <select
    id="statusFilter"
    class="border-gray-300 border rounded-md py-2 px-3 w-full md:w-auto"
  >
    <option <%= category === "main" ? "selected" : "" %>>Main Category</option>
    <option <%= category === "club" ? "selected" : "" %>>Club Category</option>
  </select>
  <div class="relative">
    <input
      type="text"
      id="searchInput"
      class="border p-2 w-full"
      placeholder="Search..."
      value=""
    />
    <button
      id="clearButton"
      class="absolute right-2 top-2 text-gray-500 hidden"
    >
