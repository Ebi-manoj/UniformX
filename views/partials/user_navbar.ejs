<div class="w-full bg-black text-white text-center py-2 text-sm">
    Get 25% OFF on your first order. Order now
  </div>

  <!-- Header/Navigation -->
  <header class="bg-white py-4 px-6 shadow-sm">
    <div class="container mx-auto flex items-center justify-between">
      <!-- Logo -->
      <div class="flex items-center">
        <img
          class="w-24 h-auto max-w-xs"
          src="/images/logo.png"
          alt="Logo"
        />
      </div>

      <!-- Navigation -->
      <!-- Navigation -->
<nav class="hidden md:flex space-x-6">
    <a href="/" class="w-32 text-center text-gray-700 hover:text-gray-900">Home</a>
    
    <select id="category" class="w-32 text-center text-gray-700 hover:text-gray-900">
      <option value="">Category</option>
      <% categories.forEach(category => { %>
        <option value="<%= category._id %>"><%= category.name %></option>
      <% }); %>
    </select>
    
  
    <div class="hidden" id="clubData" data-clubs='<%= JSON.stringify(clubs) %>'></div>
  
    <select id="club" class="w-32 text-center text-gray-700 hover:text-gray-900">
      <option value="">Club</option>
      <% clubs.forEach(club => { %>
        <option value="<%= club._id %>"><%= club.name %></option>
      <% }); %>
    </select>
  
    <a href="#" class="w-32 text-center text-gray-700 hover:text-gray-900">About</a>
    <a href="#" class="w-32 text-center text-gray-700 hover:text-gray-900">Contact</a>
  </nav>
  

      <!-- Search and Cart -->
      <div class="flex items-center space-x-4">
        <div class="relative">
          <input
            id="searchInput"
            type="text"
            placeholder="Search products"
            value="<%= searchQuery %>"
            class="pl-10 pr-4 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-1 focus:ring-gray-400 focus:border-gray-400 w-full md:w-64"
          />
          <button
          id="clearButton"
          class="absolute right-2 top-2 text-gray-500 hidden"
        >
          âœ–
        </button>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 text-gray-400 absolute left-3 top-2.5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
            />
          </svg>
        </div>

        <!-- Wishlist Button -->
        <a href="#" class="text-gray-700 hover:text-gray-900">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
            />
          </svg>
        </a>

        <!-- Cart Button -->
        <a href="/cart" class="relative text-gray-700 hover:text-gray-900">
          <!-- Cart Icon -->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"
            />
          </svg>
        
          <!-- Badge (Cart Item Count) -->
            <span
              id="cartText"
              class="absolute <%= cartLength?'block':'hidden' %> -top-2 -right-2 bg-red-500 text-white text-xs font-bold w-5 h-5 flex items-center justify-center rounded-full"
            >
              <%= cartLength %>
            </span>
         
        </a>
        
         <!-- profile -->
        <a href="/profile" class="text-gray-700 hover:text-gray-900">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
            />
          </svg>
        </a>
      </div>
    </div>
  </header>